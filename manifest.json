{
    "manifest_version": 3,
    "name": "B2P (Bookmark To Post)",
    "version": "1.0.0",
    "description": "Transform your X bookmarks into viral content ideas using AI.",
    "permissions": [
        "sidePanel",
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://api.twitter.com/*",
        "https://twitter.com/*",
        "<all_urls>"
    ],
    "background": {
        "service_worker": "src/background/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "Open B2P (Bookmark To Post)"
    },
    "side_panel": {
        "default_path": "src/sidepanel/index.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}